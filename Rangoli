#include<bits/stdc++.h>
#include <stdio.h>
#include <stdlib.h>
#include<string.h>
#include<iostream>
#include <cwchar>
#include <windows.h>

using namespace std;



main()
{
 
int n=12;
//this two loops is for upper  triangle
    

for(int i=0;i<n;i++)
{
	for(int j=0;j<(2*n);j++)
	{
		if(i+j<=n-1)  //upper left triangle
		cout<<"*";
		else
		{
		
		cout<<" ";
		cout<<".";
	}
		
		if((i+n)<=j) //upper right triagnle
		cout<<"$";
		else
		cout<<" ";
	
	}
	cout<<endl;
}
 //settextstyle(3,1,4);
 cout<<"$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$"<<endl;
 cout<<"######################################################################"<<endl;
cout<<"~*~*~*~*~**~*~*~*~*~*~*~*~*HAPPY DIWALI*~*~*~*~*~*~*~*~**~*~*~*~*~*~*~*"<<endl;
cout<<"#######################################################################"<<endl;
 cout<<"$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$"<<endl;
 //this is for buttom triangle;
for(int i=0;i<n;i++)
{
	for(int j=0;j<(2*n);j++)
	{
		if(i>=j)  //buttom left triangle
		cout<<"$";
		else
		{
		
		cout<<" ";
	
		cout<<".";
	}
		if(i>=(2*n-1)-j) //buttom right triangle
		cout<<"*";
		else
		cout<<" ";
	
	}
	cout<<endl;
}
}

